<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item 	android:state_pressed="true" android:state_focused="true">
    	<shape>
        	<solid
            	android:color="#fff"/>
   	 	</shape>
	</item>

	<item  android:state_pressed="true" android:state_focused="false">
    	<shape>
        	<solid
            	android:color="#fff"/>
        	     
    	</shape>
	</item>

	<item android:drawable="@drawable/editbox_dropdown_background" android:state_pressed="false" android:state_focused="true">
    	<shape>
        	<solid
           	 	android:color="#fff"/>
    	</shape>
	</item>

	<item android:state_enabled="true">
    	<shape>
        	<solid
            	android:color="#fff"/>
       	 	<stroke android:width="1dp"
            	android:color="#d3d3d3"/>
        	<padding 
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
            />
    	</shape>
	</item>
</selector>