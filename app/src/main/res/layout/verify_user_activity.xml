<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#304f6c"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editTextVerifyUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:hint="@string/one_time_password"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/regeneratetoken"
            android:layout_below="@+id/editTextVerifyUser"
            android:id="@+id/textRegenerateToken"
            android:clickable="true"
            android:layout_marginTop="5dp"
            android:onClick="regenerateToken"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/verifyUser_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textRegenerateToken"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="#fd9717"
            android:textColor="#fff"
            android:textSize="25sp"
            android:textStyle="bold"
            android:onClick="verify"
            android:layout_marginBottom="10dp"
            android:text="@string/verify_user" />
    </LinearLayout>
</RelativeLayout>