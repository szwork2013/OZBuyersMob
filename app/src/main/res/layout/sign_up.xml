<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#304f6c"
    android:padding="10dp"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:background="#fff"
            android:layout_height="fill_parent">

            <EditText
                android:id="@+id/editTextCountryCode"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:editable="false"
                android:ems="10"
                android:enabled="false"
                android:singleLine="true"
                android:gravity="center_horizontal|center_vertical"
                android:inputType="number"
                android:maxLength="2"
                android:text="91"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextMobileNUmber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/editTextCountryCode"
                android:ems="10"
                android:singleLine="true"
                android:hint="@string/mobile"
                android:inputType="phone"
                android:maxLength="10"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/editTextMobileNUmber"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:singleLine="true"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:singleLine="true"
                android:hint="@string/username"
                android:inputType="textPersonName"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextUserName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:singleLine="true"
                android:hint="@string/emailaddress"
                android:inputType="textEmailAddress"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextAddress1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextEmail"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:singleLine="true"
                android:hint="@string/address1"
                android:inputType="textPostalAddress"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextAddress2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextAddress1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:singleLine="true"
                android:hint="@string/address2"
                android:inputType="textPostalAddress"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextAddress2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:hint="@string/city"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextCity"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:hint="@string/area"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz 123456789./"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextArea"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:hint="@string/state"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextState"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:hint="@string/country"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextPincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextCountry"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:maxLength="6"
                android:singleLine="true"
                android:hint="@string/pincode"
                android:inputType="number"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_tc"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#4c4f56"
                android:textSize="16sp"
                android:text="@string/tc_agree"
                android:layout_below="@+id/editTextPincode"
                android:layout_marginBottom="10dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/buttonSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fd9717"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:onClick="signUp"
            android:text="@string/signup" />

    </LinearLayout>

</ScrollView>